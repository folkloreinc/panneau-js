{
    "plugins": ["@prettier/plugin-php", "@trivago/prettier-plugin-sort-imports"],
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^@panneau/(.*)$",
        "^[./](.*)?/(utils|hooks|lib)",
        "^[./].*(?<!(\\.[a-z]+))$",
        "\\.scss$",
        "\\.[a-z]+$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
