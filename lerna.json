{
    "version": "1.0.0-y.0",
    "packages": [
        "displays/*",
        "fields/*",
        "forms/*",
        "modals/*",
        "elements/*",
        "filters/*",
        "lists/*",
        "packages/*"
    ],
    "command": {
        "publish": {
            "allowBranch": [
                "master",
                "v0.8"
            ]
        },
        "bootstrap": {
            "hoist": true
        }
    },
    "bootstrap": {
        "npmClientArgs": [
            "--no-package-lock",
            "--legacy-peer-deps"
        ]
    }
}
